<head>
  <title>メモ詳細</title>
</head>

<% @memo_file_array.each do |file| %>
  <h1>Title</h1>
  <h3><%= "#{h(file[:title])}" %></h3>
  <h1>Memo</h1>
  <h3><%= "#{h(file[:content])}" %></h3>

  <form method="get" action="/memos/<%= "#{file[:memo_id]}" %>/edit">
    <button class="edit_memo_button" type="submit">編集</button>
  </form>

  <form method="post" action="/memos/<%= "#{file[:memo_id]}" %>">
    <input type="hidden" name="_method" value="delete">
    <button class="delete_memo_button" type="submit">削除</button></p>
  </form>
<% end %>

<form method="get" action="/memos">
  <button class="jump_toppage_button" type="submit">メモ一覧へ</button></p>
</form>